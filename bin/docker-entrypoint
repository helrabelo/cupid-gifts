#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
if ([ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]) || ([ "${1}" == "./bin/thrust" ] && [ "${2}" == "./bin/rails" ] && [ "${3}" == "server" ]); then
  ./bin/rails db:prepare
  ./bin/rails solid_queue:setup
  
  # Auto-seed in development environment only
  echo "DEBUG: RAILWAY_ENVIRONMENT_NAME=$RAILWAY_ENVIRONMENT_NAME"
  echo "DEBUG: AUTO_SEED_ON_DEPLOY=$AUTO_SEED_ON_DEPLOY"
  
  if [ "$RAILWAY_ENVIRONMENT_NAME" == "development" ] && ([ "$AUTO_SEED_ON_DEPLOY" == "true" ] || [ "$AUTO_SEED_ON_DEPLOY" == "TRUE" ]); then
    echo "üå± Auto-seeding development database..."
    ./bin/rails db:seed
    echo "‚úÖ Development database seeded!"
  else
    echo "‚ÑπÔ∏è  Skipping auto-seed (environment: $RAILWAY_ENVIRONMENT_NAME, auto-seed: $AUTO_SEED_ON_DEPLOY)"
  fi
fi

exec "${@}"
