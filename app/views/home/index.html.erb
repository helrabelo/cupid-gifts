# app/views/home/index.html.erb
<div class="text-center">
  <h1 class="text-4xl font-bold text-gray-900 mb-8">Welcome to CupidGifts</h1>
  
  <% if user_signed_in? %>
    <p class="text-xl text-gray-600">Welcome back, <%= current_user.first_name %>!</p>
  <% else %>
    <div class="space-x-4">
      <%= link_to "Sign In", new_user_session_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "inline-block bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>