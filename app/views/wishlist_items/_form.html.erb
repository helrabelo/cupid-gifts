<%= form_with(model: [wishlist, wishlist_item], local: true,
              data: {
                controller: "analytics url-metadata",
                action: "submit->analytics##{wishlist_item.persisted? ? 'trackItemEdited' : 'trackItemAdded'}"
              }) do |form| %>
  <% if wishlist_item.errors.any? %>
    <div class="bg-rose-50 dark:bg-rose-900/20 border border-rose-200 dark:border-rose-800 text-rose-600 dark:text-rose-400 px-4 py-3 rounded-xl mb-6">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-rose-500 dark:text-rose-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h3 class="font-semibold mb-2"><%= pluralize(wishlist_item.errors.count, "error") %> prohibited this item from being saved:</h3>
          <ul class="list-disc list-inside space-y-1">
            <% wishlist_item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :url, t('wishlist_items.form.product_url'), class: "block text-base font-bold text-rose-600 dark:text-rose-400 mb-3 flex items-center gap-2" %>
    <div class="relative shadow-lg">
      <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
        <div class="bg-gradient-to-r from-rose-500 to-pink-500 rounded-full p-1">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        </div>
      </div>
      <%= form.url_field :url, id: "wishlist_item_url", 
          data: { 
            "url-metadata-target": "url",
            "action": "blur->url-metadata#urlBlurred input->url-metadata#urlInput keydown->url-metadata#urlKeyDown"
          },
          class: "pl-14 w-full px-4 py-4 border-2 border-rose-300 dark:border-rose-700 rounded-xl focus:outline-none focus:ring-4 focus:ring-rose-500/30 dark:focus:ring-rose-400/30 focus:border-rose-500 dark:focus:border-rose-400 transition duration-300 bg-gradient-to-r from-rose-50/50 to-pink-50/50 dark:from-rose-900/30 dark:to-pink-900/30 focus:bg-white dark:focus:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-rose-400 dark:placeholder-rose-500 text-base font-medium", 
          placeholder: t('wishlist_items.form.product_url_placeholder') %>
      
      <!-- Loading indicator -->
      <div id="url-loading" data-url-metadata-target="loading" class="absolute inset-y-0 right-0 pr-4 flex items-center hidden">
        <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-rose-500 dark:text-rose-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
      
      <!-- Success indicator -->
      <div id="url-success" data-url-metadata-target="success" class="absolute inset-y-0 right-0 pr-4 flex items-center hidden">
        <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
    </div>
    <div class="mt-3 p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg">
      <div class="flex items-start gap-4">
        <div class="flex items-center gap-2 w-[30%] flex-shrink-0">
          <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          <strong class="text-sm text-blue-700 dark:text-blue-300 font-semibold">‚ú® <%= t('wishlist_items.form.magic_tip_label') %>:</strong>
        </div>
        <p class="text-sm text-blue-700 dark:text-blue-300 font-medium w-[70%] leading-relaxed">
          <%= t('wishlist_items.form.product_url_help') %>
        </p>
      </div>
    </div>
    
    <!-- Status messages -->
    <div id="url-status" data-url-metadata-target="errorMessage" class="mt-3 text-sm hidden">
      <div id="url-fetching" data-url-metadata-target="fetching" class="p-3 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg text-blue-700 dark:text-blue-300 hidden">
        <span class="inline-flex items-center gap-2 font-medium">
          <svg class="animate-spin h-4 w-4" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          üîç <%= t('wishlist_items.status.fetching') %>
        </span>
      </div>
      <div id="url-populated" data-url-metadata-target="populated" class="p-3 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg text-green-700 dark:text-green-300 hidden">
        <span class="inline-flex items-center gap-2 font-medium">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          ‚ú® <%= t('wishlist_items.status.populated') %>
        </span>
      </div>
      <div id="url-error" data-url-metadata-target="error" class="p-3 bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-lg text-amber-700 dark:text-amber-300 hidden">
        <span class="inline-flex items-center gap-2 font-medium">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          ‚ö†Ô∏è <%= t('wishlist_items.status.error') %>
        </span>
      </div>
    </div>
  </div>

  <div class="mb-6">
    <%= form.label :name, t('wishlist_items.form.item_name'), class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
    <%= form.text_field :name, id: "wishlist_item_name", 
        data: { "url-metadata-target": "name" },
        class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 bg-rose-50/30 dark:bg-rose-900/20 focus:bg-white dark:focus:bg-gray-700 text-gray-900 dark:text-gray-100", 
        placeholder: t('wishlist_items.form.item_name_placeholder') %>
  </div>

  <div class="mb-6">
    <%= form.label :description, t('wishlist_items.form.description'), class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
    <%= form.text_area :description, rows: 4, id: "wishlist_item_description", 
        data: { "url-metadata-target": "description" },
        class: "w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 dark:focus:ring-rose-500 focus:border-rose-400 dark:focus:border-rose-500 transition duration-200 resize-none bg-rose-50/30 dark:bg-rose-900/20 focus:bg-white dark:focus:bg-gray-700 text-gray-900 dark:text-gray-100", 
        placeholder: t('wishlist_items.form.description_placeholder') %>
  </div>

  <!-- Price Section -->
  <div class="mb-6">
    <%= form.label :price, t('wishlist_items.form.price_with_currency', default: 'Price & Currency'), class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-3" %>
    <div class="flex gap-3 items-stretch" data-controller="currency-selector">
      <!-- Currency Selector -->
      <div class="relative">
        <%= form.select :currency, 
            options_from_collection_for_select(
              WishlistItem::PRIORITY_CURRENCIES.map { |code| 
                [code, WishlistItem::CURRENCIES[code][:symbol] + ' ' + code] 
              } + 
              [['', '--- Other Currencies ---', disabled: true]] +
              (WishlistItem::CURRENCIES.keys - WishlistItem::PRIORITY_CURRENCIES).map { |code|
                [code, WishlistItem::CURRENCIES[code][:symbol] + ' ' + code]
              }, :first, :last, wishlist_item.currency || 'USD'
            ),
            {},
            { 
              id: "wishlist_item_currency",
              data: { "url-metadata-target": "currency", "currency-selector-target": "select", "action": "change->currency-selector#updateSymbol" },
              class: "w-32 px-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 dark:focus:ring-rose-400 focus:border-rose-500 dark:focus:border-rose-400 transition bg-rose-50/30 dark:bg-rose-900/20 focus:bg-white dark:focus:bg-gray-700 text-base font-medium text-gray-700 dark:text-gray-200 appearance-none cursor-pointer",
              style: "height: 48px;"
            } %>
      </div>
      
      <!-- Price Input -->
      <div class="relative flex-1">
        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
          <span class="text-gray-500 dark:text-gray-400 text-base font-medium" data-currency-selector-target="symbol">
            <%= WishlistItem::CURRENCIES[wishlist_item.currency || 'USD'][:symbol] %>
          </span>
        </div>
        <%= form.number_field :price, 
            step: 0.01, 
            min: 0,
            id: "wishlist_item_price",
            data: { "url-metadata-target": "price", "currency-selector-target": "priceInput" },
            class: "w-full pl-12 pr-4 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 dark:focus:ring-rose-400 focus:border-rose-500 dark:focus:border-rose-400 transition bg-rose-50/30 dark:bg-rose-900/20 focus:bg-white dark:focus:bg-gray-700 text-base text-gray-900 dark:text-gray-100",
            style: "height: 48px;",
            placeholder: "0.00" %>
      </div>
    </div>
    <p class="mt-2 text-xs text-gray-500 dark:text-gray-400 flex items-center gap-1">
      <svg class="w-3 h-3 text-blue-500 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <%= t('wishlist_items.form.currency_help', default: "We'll try to detect the currency from the product URL automatically") %>
    </p>
  </div>

  <!-- Priority Section -->
  <div class="mb-6">
    <%= form.label :priority, t('wishlist_items.form.priority'), class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
    
    <!-- Priority Options as Colored Pills -->
    <div class="flex gap-2" data-controller="priority-selector" data-priority-selector-selected-value="<%= wishlist_item.priority || 'medium' %>">
      <!-- High Priority -->
      <%= form.radio_button :priority, 'high', 
          class: "peer sr-only", 
          id: "priority_high",
          data: { action: "change->priority-selector#updateSelection" } %>
      <%= form.label :priority, 'high', for: "priority_high", 
          class: "px-4 py-2 bg-rose-50 dark:bg-rose-900/20 text-rose-700 dark:text-rose-400 border-2 border-rose-100 dark:border-rose-800 rounded-full cursor-pointer hover:bg-rose-100 dark:hover:bg-rose-800/30 hover:border-rose-200 dark:hover:border-rose-700 transition-all duration-200 peer-checked:bg-rose-500 peer-checked:text-white peer-checked:border-rose-500 peer-checked:shadow-md text-sm font-medium" do %>
        <%= t('wishlist_items.form.priority_high') %>
      <% end %>

      <!-- Medium Priority -->
      <%= form.radio_button :priority, 'medium', 
          class: "peer sr-only", 
          id: "priority_medium",
          data: { action: "change->priority-selector#updateSelection" } %>
      <%= form.label :priority, 'medium', for: "priority_medium",
          class: "px-4 py-2 bg-rose-50 dark:bg-rose-900/20 text-rose-600 dark:text-rose-400 border-2 border-rose-100 dark:border-rose-800 rounded-full cursor-pointer hover:bg-rose-100 dark:hover:bg-rose-800/30 hover:border-rose-200 dark:hover:border-rose-700 transition-all duration-200 peer-checked:bg-rose-400 peer-checked:text-white peer-checked:border-rose-400 peer-checked:shadow-md text-sm font-medium" do %>
        <%= t('wishlist_items.form.priority_medium') %>
      <% end %>

      <!-- Low Priority -->
      <%= form.radio_button :priority, 'low', 
          class: "peer sr-only", 
          id: "priority_low",
          data: { action: "change->priority-selector#updateSelection" } %>
      <%= form.label :priority, 'low', for: "priority_low",
          class: "px-4 py-2 bg-gray-50 dark:bg-gray-800 text-gray-600 dark:text-gray-400 border-2 border-gray-100 dark:border-gray-600 rounded-full cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-700 hover:border-gray-200 dark:hover:border-gray-500 transition-all duration-200 peer-checked:bg-gray-400 dark:peer-checked:bg-gray-500 peer-checked:text-white peer-checked:border-gray-400 dark:peer-checked:border-gray-500 peer-checked:shadow-md text-sm font-medium" do %>
        <%= t('wishlist_items.form.priority_low') %>
      <% end %>
    </div>
  </div>

  <div class="mb-6">
    <%= form.label :image_url, t('wishlist_items.form.image_url'), class: "block text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2" %>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
        <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
      <%= form.url_field :image_url, id: "wishlist_item_image_url", 
          data: { 
            "url-metadata-target": "image",
            "action": "input->url-metadata#imageInput blur->url-metadata#imageBlurred"
          },
          class: "pl-12 w-full px-4 py-3 border-2 border-rose-200 dark:border-rose-800 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 dark:focus:ring-rose-400 focus:border-rose-500 dark:focus:border-rose-400 transition duration-200 bg-rose-50/30 dark:bg-rose-900/20 focus:bg-white dark:focus:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400", 
          placeholder: t('wishlist_items.form.image_url_placeholder') %>
    </div>
    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400"><%= t('wishlist_items.form.image_url_help') %></p>
    
    <!-- Image Preview -->
    <div id="image-preview" data-url-metadata-target="imagePreview" class="mt-4 hidden">
      <p class="text-sm font-semibold text-gray-800 dark:text-gray-200 mb-2"><%= t('wishlist_items.form.image_preview') %></p>
      <div class="relative inline-block">
        <img id="preview-image" data-url-metadata-target="previewImage" src="" alt="Product preview" class="w-32 h-32 object-cover rounded-lg border border-gray-200 dark:border-gray-600 shadow-sm">
        <div id="image-loading" data-url-metadata-target="imageLoading" class="absolute inset-0 bg-gray-100 dark:bg-gray-700 rounded-lg flex items-center justify-center hidden">
          <svg class="animate-spin h-6 w-6 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
        <div id="image-error" data-url-metadata-target="imageError" class="absolute inset-0 bg-gray-100 dark:bg-gray-700 rounded-lg flex items-center justify-center text-gray-400 dark:text-gray-500 text-xs text-center p-2 hidden">
          <span>Failed to load image</span>
        </div>
      </div>
    </div>
  </div>

  <div class="flex gap-3">
    <%= form.submit wishlist_item.persisted? ? t('wishlist_items.form.update_button') : t('wishlist_items.form.create_button'), class: "bg-gradient-to-r from-rose-500 to-pink-500 hover:from-rose-600 hover:to-pink-600 text-white px-8 py-3 rounded-xl transition duration-200 cursor-pointer font-semibold shadow-lg hover:shadow-xl" %>
    <%= link_to t('wishlist_items.form.cancel'), wishlist_path(wishlist), class: "bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-8 py-3 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 transition duration-200 font-semibold" %>
  </div>
<% end %>
