<%= form_with(model: [wishlist, wishlist_item], local: true) do |form| %>
  <% if wishlist_item.errors.any? %>
    <div class="bg-rose-50 border border-rose-200 text-rose-600 px-4 py-3 rounded-xl mb-6">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-rose-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h3 class="font-semibold mb-2"><%= pluralize(wishlist_item.errors.count, "error") %> prohibited this item from being saved:</h3>
          <ul class="list-disc list-inside space-y-1">
            <% wishlist_item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :name, "Item Name", class: "block text-sm font-semibold text-gray-800 mb-2" %>
    <%= form.text_field :name, class: "w-full px-4 py-3 border border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 bg-rose-50/30 focus:bg-white", placeholder: "Yoga Mat" %>
  </div>

  <div class="mb-6">
    <%= form.label :description, class: "block text-sm font-semibold text-gray-800 mb-2" %>
    <%= form.text_area :description, rows: 4, class: "w-full px-4 py-3 border border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 resize-none bg-rose-50/30 focus:bg-white", placeholder: "Non-slip yoga mat for home workouts..." %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <div>
      <%= form.label :price, class: "block text-sm font-semibold text-gray-800 mb-2" %>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
          <span class="text-gray-500 text-lg font-medium">$</span>
        </div>
        <%= form.number_field :price, step: 0.01, class: "pl-10 w-full px-4 py-3 border border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 bg-rose-50/30 focus:bg-white", placeholder: "45" %>
      </div>
    </div>

    <div>
      <%= form.label :priority, class: "block text-sm font-semibold text-gray-800 mb-2" %>
      <%= form.select :priority, options_for_select([['High Priority', 'high'], ['Medium Priority', 'medium'], ['Low Priority', 'low']], wishlist_item.priority), {}, class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition duration-200 bg-white" %>
    </div>
  </div>

  <div class="mb-6">
    <%= form.label :url, "Product URL", class: "block text-sm font-semibold text-gray-800 mb-2" %>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      </div>
      <%= form.url_field :url, class: "pl-12 w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition duration-200", placeholder: "https://example.com/product" %>
    </div>
    <p class="mt-2 text-sm text-gray-500">Add a link to the product online</p>
  </div>

  <div class="mb-6">
    <%= form.label :image_url, "Image URL", class: "block text-sm font-semibold text-gray-800 mb-2" %>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
      <%= form.url_field :image_url, class: "pl-12 w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 transition duration-200", placeholder: "https://example.com/image.jpg" %>
    </div>
    <p class="mt-2 text-sm text-gray-500">Add an image URL to show a preview</p>
  </div>

  <div class="bg-pink-50 rounded-xl p-6 mb-6">
    <div class="flex items-start gap-3">
      <div class="bg-pink-100 rounded-full p-2 flex-shrink-0">
        <svg class="w-5 h-5 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <h3 class="font-semibold text-gray-800 mb-1">Pro tip</h3>
        <p class="text-sm text-gray-600">Add a product URL and we'll try to automatically fill in the details like name, description, and image!</p>
      </div>
    </div>
  </div>

  <div class="flex gap-3">
    <%= form.submit class: "bg-pink-500 text-white px-8 py-3 rounded-xl hover:bg-pink-600 transition duration-200 cursor-pointer font-semibold" %>
    <%= link_to "Cancel", wishlist_path(wishlist), class: "bg-gray-100 text-gray-700 px-8 py-3 rounded-xl hover:bg-gray-200 transition duration-200 font-semibold" %>
  </div>
<% end %>

<script>
  // Auto-populate fields when URL is entered
  document.addEventListener('DOMContentLoaded', function() {
    const urlField = document.querySelector('#wishlist_item_url');
    const nameField = document.querySelector('#wishlist_item_name');
    const descriptionField = document.querySelector('#wishlist_item_description');
    const imageField = document.querySelector('#wishlist_item_image_url');
    const priceField = document.querySelector('#wishlist_item_price');
    
    if (urlField) {
      let timeout;
      urlField.addEventListener('input', function() {
        clearTimeout(timeout);
        timeout = setTimeout(() => {
          const url = urlField.value.trim();
          if (url && url.startsWith('http') && !nameField.value.trim()) {
            // Basic URL metadata extraction could be implemented here
            // For now, just suggest the user to manually fill the fields
            console.log('URL entered:', url);
          }
        }, 1000);
      });
    }
  });
</script>