<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to wishlist_path(@wishlist), class: "inline-flex items-center text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 transition duration-200" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      <%= t('wishlist_items.edit.back_to_wishlist', wishlist_name: @wishlist.name) %>
    <% end %>
  </div>

  <div class="bg-white/80 dark:bg-gray-800/90 backdrop-blur-sm rounded-3xl border border-rose-100 dark:border-gray-700 overflow-hidden shadow-xl">
    <div class="bg-gradient-to-r from-rose-50 to-amber-50 dark:from-rose-900/20 dark:to-amber-900/20 px-8 py-6">
      <div class="flex items-center gap-3">
        <div class="bg-white/90 dark:bg-gray-800/90 rounded-xl p-2 shadow-sm">
          <svg class="w-6 h-6 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100"><%= t('wishlist_items.edit.title') %></h1>
          <p class="text-gray-600 dark:text-gray-400 text-sm"><%= t('wishlist_items.edit.subtitle') %></p>
        </div>
      </div>
    </div>
    <div class="p-8">
      <%= render 'form', wishlist: @wishlist, wishlist_item: @wishlist_item %>
    </div>
  </div>
</div>