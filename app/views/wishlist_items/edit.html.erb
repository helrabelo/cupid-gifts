<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to wishlist_path(@wishlist), class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition duration-200" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to <%= @wishlist.name %>
    <% end %>
  </div>

  <div class="bg-white rounded-xl border border-gray-100 overflow-hidden">
    <div class="bg-teal-50 px-8 py-6">
      <div class="flex items-center gap-3">
        <div class="bg-white rounded-lg p-2">
          <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-800">Edit Item</h1>
          <p class="text-gray-600 text-sm">Update the details for this wishlist item</p>
        </div>
      </div>
    </div>
    <div class="p-8">
      <%= render 'form', wishlist: @wishlist, wishlist_item: @wishlist_item %>
    </div>
  </div>
</div>