<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to wishlist_path(@wishlist), class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition duration-200" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      <%= t('wishlist_items.new.back_to_wishlist', wishlist_name: @wishlist.name) %>
    <% end %>
  </div>

  <div class="bg-white rounded-xl border border-gray-100 overflow-hidden">
    <div class="bg-pink-50 px-8 py-6">
      <div class="flex items-center gap-3">
        <div class="bg-white rounded-lg p-2">
          <svg class="w-6 h-6 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-800"><%= t('wishlist_items.new.title') %></h1>
          <p class="text-gray-600 text-sm"><%= t('wishlist_items.new.subtitle', wishlist_name: @wishlist.name) %></p>
        </div>
      </div>
    </div>
    <div class="p-8">
      <%= render 'form', wishlist: @wishlist, wishlist_item: @wishlist_item %>
    </div>
  </div>
</div>