<div class="min-h-screen bg-gradient-to-br from-pink-50 to-purple-50">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-pink-500 to-pink-600 px-8 py-6">
        <h1 class="text-3xl font-bold text-white"><%= t('legal.privacy_policy.title') %></h1>
        <p class="text-pink-100 mt-2"><%= t('legal.privacy_policy.last_updated', date: l(Date.current, format: :long)) %></p>
      </div>

      <!-- Content -->
      <div class="px-8 py-6 prose prose-lg max-w-none">
        <div class="space-y-8">
          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.privacy_policy.sections.introduction.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.privacy_policy.sections.introduction.content') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.privacy_policy.sections.information_collected.title') %></h2>
            <div class="space-y-4">
              <h3 class="text-xl font-semibold text-gray-900"><%= t('legal.privacy_policy.sections.information_collected.personal.title') %></h3>
              <p class="text-gray-700 leading-relaxed mb-2"><%= t('legal.privacy_policy.sections.information_collected.personal.intro') %></p>
              <ul class="list-disc pl-6 text-gray-700 space-y-2">
                <% t('legal.privacy_policy.sections.information_collected.personal.list').each do |item| %>
                  <li><%= raw(item) %></li>
                <% end %>
              </ul>
              
              <h3 class="text-xl font-semibold text-gray-900"><%= t('legal.privacy_policy.sections.information_collected.content.title') %></h3>
              <p class="text-gray-700 leading-relaxed mb-2"><%= t('legal.privacy_policy.sections.information_collected.content.intro') %></p>
              <ul class="list-disc pl-6 text-gray-700 space-y-2">
                <% t('legal.privacy_policy.sections.information_collected.content.list').each do |item| %>
                  <li><%= raw(item) %></li>
                <% end %>
              </ul>

              <h3 class="text-xl font-semibold text-gray-900"><%= t('legal.privacy_policy.sections.information_collected.technical.title') %></h3>
              <p class="text-gray-700 leading-relaxed mb-2"><%= t('legal.privacy_policy.sections.information_collected.technical.intro') %></p>
              <ul class="list-disc pl-6 text-gray-700 space-y-2">
                <% t('legal.privacy_policy.sections.information_collected.technical.list').each do |item| %>
                  <li><%= item %></li>
                <% end %>
              </ul>
            </div>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.privacy_policy.sections.how_we_use.title') %></h2>
            <p class="text-gray-700 leading-relaxed mb-4"><%= t('legal.privacy_policy.sections.how_we_use.intro') %></p>
            <ul class="list-disc pl-6 text-gray-700 space-y-2">
              <% t('legal.privacy_policy.sections.how_we_use.list').each do |item| %>
                <li><%= raw(item) %></li>
              <% end %>
            </ul>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.privacy_policy.sections.sharing_disclosure.title') %></h2>
            <p class="text-gray-700 leading-relaxed mb-4"><%= t('legal.privacy_policy.sections.sharing_disclosure.intro') %></p>
            <div class="space-y-4">
              <h3 class="text-xl font-semibold text-gray-900"><%= t('legal.privacy_policy.sections.sharing_disclosure.with_users.title') %></h3>
              <p class="text-gray-700 leading-relaxed">
                <%= t('legal.privacy_policy.sections.sharing_disclosure.with_users.content') %>
              </p>
              
              <h3 class="text-xl font-semibold text-gray-900"><%= t('legal.privacy_policy.sections.sharing_disclosure.service_providers.title') %></h3>
              <p class="text-gray-700 leading-relaxed">
                <%= t('legal.privacy_policy.sections.sharing_disclosure.service_providers.content') %>
              </p>
              
              <h3 class="text-xl font-semibold text-gray-900"><%= t('legal.privacy_policy.sections.sharing_disclosure.legal_requirements.title') %></h3>
              <p class="text-gray-700 leading-relaxed">
                <%= t('legal.privacy_policy.sections.sharing_disclosure.legal_requirements.content') %>
              </p>
              
              <h3 class="text-xl font-semibold text-gray-900"><%= t('legal.privacy_policy.sections.sharing_disclosure.business_transfers.title') %></h3>
              <p class="text-gray-700 leading-relaxed">
                <%= t('legal.privacy_policy.sections.sharing_disclosure.business_transfers.content') %>
              </p>
            </div>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.privacy_policy.sections.data_security.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.privacy_policy.sections.data_security.content') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.privacy_policy.sections.data_retention.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.privacy_policy.sections.data_retention.content') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.privacy_policy.sections.your_rights.title') %></h2>
            <p class="text-gray-700 leading-relaxed mb-4"><%= t('legal.privacy_policy.sections.your_rights.intro') %></p>
            <ul class="list-disc pl-6 text-gray-700 space-y-2">
              <% t('legal.privacy_policy.sections.your_rights.list').each do |item| %>
                <li><%= raw(item) %></li>
              <% end %>
            </ul>
            <p class="text-gray-700 leading-relaxed mt-4">
              <%= t('legal.privacy_policy.sections.your_rights.contact_info') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.privacy_policy.sections.cookies.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.privacy_policy.sections.cookies.content') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.privacy_policy.sections.third_party_links.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.privacy_policy.sections.third_party_links.content') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.privacy_policy.sections.children_privacy.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.privacy_policy.sections.children_privacy.content') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.privacy_policy.sections.international_users.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.privacy_policy.sections.international_users.content') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.privacy_policy.sections.policy_changes.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.privacy_policy.sections.policy_changes.content') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.privacy_policy.sections.contact.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.privacy_policy.sections.contact.intro') %>
            </p>
            <div class="bg-pink-50 border border-pink-200 rounded-lg p-4 mt-4">
              <p class="text-gray-700 font-medium"><%= t('legal.privacy_policy.sections.contact.support_title') %></p>
              <p class="text-gray-700"><%= t('legal.privacy_policy.sections.contact.email') %></p>
              <p class="text-gray-700"><%= t('legal.privacy_policy.sections.contact.website') %> <%= link_to root_url, root_url, class: "text-pink-600 hover:text-pink-700 underline" %></p>
              <p class="text-gray-700 text-sm mt-2"><%= t('legal.privacy_policy.sections.contact.response_time') %></p>
            </div>
          </section>
        </div>
      </div>
    </div>

    <!-- Navigation -->
    <div class="text-center mt-8 space-x-4">
      <%= link_to t('legal.privacy_policy.back_to_wishare'), root_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-pink-700 bg-pink-100 hover:bg-pink-200 transition duration-150 ease-in-out" %>
      <%= link_to t('legal.terms_of_service.title'), terms_of_service_path, class: "inline-flex items-center px-4 py-2 border border-pink-300 text-base font-medium rounded-md text-pink-700 bg-white hover:bg-pink-50 transition duration-150 ease-in-out" %>
    </div>
  </div>
</div>