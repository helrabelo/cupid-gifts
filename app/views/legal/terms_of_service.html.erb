<div class="min-h-screen bg-gradient-to-br from-pink-50 to-purple-50">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-pink-500 to-pink-600 px-8 py-6">
        <h1 class="text-3xl font-bold text-white"><%= t('legal.terms_of_service.title') %></h1>
        <p class="text-pink-100 mt-2"><%= t('legal.terms_of_service.last_updated', date: l(Date.current, format: :long)) %></p>
      </div>

      <!-- Content -->
      <div class="px-8 py-6 prose prose-lg max-w-none">
        <div class="space-y-8">
          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.terms_of_service.sections.acceptance.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.terms_of_service.sections.acceptance.content') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.terms_of_service.sections.service_description.title') %></h2>
            <p class="text-gray-700 leading-relaxed mb-4">
              <%= t('legal.terms_of_service.sections.service_description.intro') %>
            </p>
            <ul class="list-disc pl-6 text-gray-700 space-y-2">
              <% t('legal.terms_of_service.sections.service_description.features').each do |feature| %>
                <li><%= feature %></li>
              <% end %>
            </ul>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.terms_of_service.sections.user_accounts.title') %></h2>
            <div class="space-y-4">
              <h3 class="text-xl font-semibold text-gray-900"><%= t('legal.terms_of_service.sections.user_accounts.registration.title') %></h3>
              <p class="text-gray-700 leading-relaxed">
                <%= t('legal.terms_of_service.sections.user_accounts.registration.content') %>
              </p>
              
              <h3 class="text-xl font-semibold text-gray-900"><%= t('legal.terms_of_service.sections.user_accounts.security.title') %></h3>
              <p class="text-gray-700 leading-relaxed">
                <%= t('legal.terms_of_service.sections.user_accounts.security.content') %>
              </p>
              
              <h3 class="text-xl font-semibold text-gray-900"><%= t('legal.terms_of_service.sections.user_accounts.termination.title') %></h3>
              <p class="text-gray-700 leading-relaxed">
                <%= t('legal.terms_of_service.sections.user_accounts.termination.content') %>
              </p>
            </div>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.terms_of_service.sections.user_content.title') %></h2>
            <div class="space-y-4">
              <h3 class="text-xl font-semibold text-gray-900"><%= t('legal.terms_of_service.sections.user_content.your_content.title') %></h3>
              <p class="text-gray-700 leading-relaxed">
                <%= t('legal.terms_of_service.sections.user_content.your_content.content') %>
              </p>
              
              <h3 class="text-xl font-semibold text-gray-900"><%= t('legal.terms_of_service.sections.user_content.prohibited.title') %></h3>
              <p class="text-gray-700 leading-relaxed mb-2"><%= t('legal.terms_of_service.sections.user_content.prohibited.intro') %></p>
              <ul class="list-disc pl-6 text-gray-700 space-y-1">
                <% t('legal.terms_of_service.sections.user_content.prohibited.list').each do |item| %>
                  <li><%= item %></li>
                <% end %>
              </ul>
            </div>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.terms_of_service.sections.privacy.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.terms_of_service.sections.privacy.content').html_safe %>
              <%= link_to t('legal.privacy_policy.title'), privacy_policy_path, class: "text-pink-600 hover:text-pink-700 underline" %>.
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.terms_of_service.sections.intellectual_property.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.terms_of_service.sections.intellectual_property.content') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.terms_of_service.sections.third_party.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.terms_of_service.sections.third_party.content') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Analytics and Data Collection</h2>
            <div class="space-y-4">
              <p class="text-gray-700 leading-relaxed">
                By using Wishare, you acknowledge that we may collect and process analytics data to improve our services, subject to your consent preferences.
              </p>
              
              <h3 class="text-xl font-semibold text-gray-900">Consent-Based Tracking</h3>
              <p class="text-gray-700 leading-relaxed">
                We implement a consent-first approach to analytics. No tracking technologies are activated without your explicit permission. You may:
              </p>
              <ul class="list-disc pl-6 text-gray-700 space-y-2">
                <li>Choose which types of cookies and tracking you permit</li>
                <li>Withdraw your consent at any time</li>
                <li>Use our service fully even without granting analytics consent</li>
                <li>Request deletion of your analytics data</li>
              </ul>
              
              <h3 class="text-xl font-semibold text-gray-900">Data Processing</h3>
              <p class="text-gray-700 leading-relaxed">
                When you consent to analytics, we may process data about your usage patterns, preferences, and interactions with our platform to:
              </p>
              <ul class="list-disc pl-6 text-gray-700 space-y-2">
                <li>Improve the user experience and platform functionality</li>
                <li>Understand how features are used and adopted</li>
                <li>Identify and fix technical issues</li>
                <li>Develop new features based on user needs</li>
              </ul>
              
              <p class="text-gray-700 leading-relaxed mt-4">
                For detailed information about our data practices, please review our <a href="<%= privacy_policy_path %>" class="text-pink-600 hover:text-pink-700 underline">Privacy Policy</a>.
              </p>
            </div>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.terms_of_service.sections.disclaimers.title') %></h2>
            <div class="space-y-4">
              <h3 class="text-xl font-semibold text-gray-900"><%= t('legal.terms_of_service.sections.disclaimers.availability.title') %></h3>
              <p class="text-gray-700 leading-relaxed">
                <%= t('legal.terms_of_service.sections.disclaimers.availability.content') %>
              </p>
              
              <h3 class="text-xl font-semibold text-gray-900"><%= t('legal.terms_of_service.sections.disclaimers.liability.title') %></h3>
              <p class="text-gray-700 leading-relaxed">
                <%= t('legal.terms_of_service.sections.disclaimers.liability.content') %>
              </p>
            </div>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.terms_of_service.sections.indemnification.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.terms_of_service.sections.indemnification.content') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.terms_of_service.sections.changes.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.terms_of_service.sections.changes.content') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.terms_of_service.sections.governing_law.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.terms_of_service.sections.governing_law.content') %>
            </p>
          </section>

          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= t('legal.terms_of_service.sections.contact.title') %></h2>
            <p class="text-gray-700 leading-relaxed">
              <%= t('legal.terms_of_service.sections.contact.intro') %>
            </p>
            <div class="bg-pink-50 border border-pink-200 rounded-lg p-4 mt-4">
              <p class="text-gray-700 font-medium"><%= t('legal.terms_of_service.sections.contact.support_title') %></p>
              <p class="text-gray-700"><%= t('legal.terms_of_service.sections.contact.email') %></p>
              <p class="text-gray-700"><%= t('legal.terms_of_service.sections.contact.website') %> <%= link_to root_url, root_url, class: "text-pink-600 hover:text-pink-700 underline" %></p>
            </div>
          </section>

          <section class="border-t border-gray-200 pt-8">
            <p class="text-sm text-gray-500 text-center">
              <%= t('legal.terms_of_service.acknowledgment') %>
            </p>
          </section>
        </div>
      </div>
    </div>

    <!-- Navigation -->
    <div class="text-center mt-8 space-x-4">
      <%= link_to t('legal.terms_of_service.back_to_wishare'), root_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-pink-700 bg-pink-100 hover:bg-pink-200 transition duration-150 ease-in-out" %>
      <%= link_to t('legal.privacy_policy.title'), privacy_policy_path, class: "inline-flex items-center px-4 py-2 border border-pink-300 text-base font-medium rounded-md text-pink-700 bg-white hover:bg-pink-50 transition duration-150 ease-in-out" %>
    </div>
  </div>
</div>