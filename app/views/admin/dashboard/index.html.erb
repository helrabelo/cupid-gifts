<div class="px-4 py-6 sm:px-0">
  <!-- Page Header -->
  <div class="pb-5 border-b border-gray-200">
    <h1 class="text-3xl font-bold leading-6 text-gray-900">Admin Dashboard</h1>
    <p class="mt-2 max-w-4xl text-sm text-gray-500">
      Overview of platform metrics, user activity, and system health
    </p>
  </div>

  <!-- Platform Statistics Cards -->
  <div class="mt-6 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
    <!-- Total Users -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">
                Total Users
              </dt>
              <dd class="text-lg font-medium text-gray-900">
                <%= number_with_delimiter(@platform_stats[:total_users]) %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <div class="text-sm">
          <span class="text-gray-600">Active (30d):</span>
          <span class="font-medium text-gray-900"><%= number_with_delimiter(@platform_stats[:active_users_30d]) %></span>
        </div>
      </div>
    </div>

    <!-- Total Wishlists -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">
                Total Wishlists
              </dt>
              <dd class="text-lg font-medium text-gray-900">
                <%= number_with_delimiter(@platform_stats[:total_wishlists]) %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <div class="text-sm">
          <span class="text-gray-600">This month:</span>
          <span class="font-medium text-gray-900"><%= number_with_delimiter(@growth_metrics[:wishlists_this_month]) %></span>
        </div>
      </div>
    </div>

    <!-- Total Connections -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">
                Active Connections
              </dt>
              <dd class="text-lg font-medium text-gray-900">
                <%= number_with_delimiter(@platform_stats[:total_connections]) %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <div class="text-sm">
          <span class="text-gray-600">This month:</span>
          <span class="font-medium text-gray-900"><%= number_with_delimiter(@growth_metrics[:connections_this_month]) %></span>
        </div>
      </div>
    </div>

    <!-- Total Items -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">
                Wishlist Items
              </dt>
              <dd class="text-lg font-medium text-gray-900">
                <%= number_with_delimiter(@platform_stats[:total_items]) %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <div class="text-sm">
          <span class="text-gray-600">Purchased:</span>
          <span class="font-medium text-gray-900"><%= number_with_delimiter(@platform_stats[:total_purchases]) %></span>
        </div>
      </div>
    </div>

    <!-- Growth Rate -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">
                User Growth
              </dt>
              <dd class="text-lg font-medium text-gray-900">
                <%= number_with_delimiter(@growth_metrics[:new_users_this_month]) %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <div class="text-sm">
          <span class="text-gray-600">Last month:</span>
          <span class="font-medium text-gray-900"><%= number_with_delimiter(@growth_metrics[:new_users_last_month]) %></span>
        </div>
      </div>
    </div>

    <!-- Purchase Rate -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">
                Purchase Rate
              </dt>
              <dd class="text-lg font-medium text-gray-900">
                <% if @platform_stats[:total_items] > 0 %>
                  <%= number_to_percentage((@platform_stats[:total_purchases].to_f / @platform_stats[:total_items]) * 100, precision: 1) %>
                <% else %>
                  0%
                <% end %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <div class="text-sm">
          <span class="text-gray-600">Items purchased vs total</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity and Top Users -->
  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-2">
    <!-- Recent Activity -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Activity</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Latest user actions on the platform</p>
      </div>
      <div class="divide-y divide-gray-200">
        <% @recent_activities.limit(8).each do |event| %>
          <div class="px-4 py-4 sm:px-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <% case event.event_type %>
                  <% when 'wishlist_created' %>
                    <div class="h-8 w-8 rounded-full bg-green-100 flex items-center justify-center">
                      <svg class="h-4 w-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                      </svg>
                    </div>
                  <% when 'item_added' %>
                    <div class="h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center">
                      <svg class="h-4 w-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                      </svg>
                    </div>
                  <% when 'connection_formed' %>
                    <div class="h-8 w-8 rounded-full bg-purple-100 flex items-center justify-center">
                      <svg class="h-4 w-4 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                    </div>
                  <% else %>
                    <div class="h-8 w-8 rounded-full bg-gray-100 flex items-center justify-center">
                      <svg class="h-4 w-4 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900">
                    <%= event.event_type.humanize %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <% if event.user %>
                      by <%= event.user.name %>
                    <% else %>
                      by anonymous user
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="text-sm text-gray-500">
                <%= time_ago_in_words(event.created_at) %> ago
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="px-4 py-3 bg-gray-50 text-right text-sm">
        <a href="#" class="text-rose-600 hover:text-rose-900">View all activity →</a>
      </div>
    </div>

    <!-- Top Users by Engagement -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Top Users by Engagement</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Users with highest engagement scores</p>
      </div>
      <div class="divide-y divide-gray-200">
        <% @user_analytics.each_with_index do |user_analytic, index| %>
          <div class="px-4 py-4 sm:px-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <% if user_analytic.user.avatar_url %>
                    <img class="h-8 w-8 rounded-full" src="<%= user_analytic.user.avatar_url %>" alt="<%= user_analytic.user.name %>">
                  <% else %>
                    <div class="h-8 w-8 rounded-full bg-rose-500 flex items-center justify-center text-white text-sm font-medium">
                      <%= user_analytic.user.name.first.upcase %>
                    </div>
                  <% end %>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900">
                    <%= link_to user_analytic.user.name, admin_user_path(user_analytic.user), class: "hover:text-rose-600" %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= user_analytic.wishlists_created_count %> lists, 
                    <%= user_analytic.connections_count %> connections
                  </div>
                </div>
              </div>
              <div class="text-right">
                <div class="text-sm font-medium text-gray-900">
                  Score: <%= number_with_delimiter(user_analytic.engagement_score.round) %>
                </div>
                <div class="text-sm text-gray-500">
                  #<%= index + 1 %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="px-4 py-3 bg-gray-50 text-right text-sm">
        <%= link_to admin_users_path, class: "text-rose-600 hover:text-rose-900" do %>
          View all users →
        <% end %>
      </div>
    </div>
  </div>
</div>