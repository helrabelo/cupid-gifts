<% content_for :title, t('auth.sign_up.title') %>
<% content_for :description, t('auth.sign_up.description') %>

<div class="min-h-screen bg-gradient-to-br from-rose-50 via-amber-50 to-purple-50 flex flex-col justify-center px-4 py-8 sm:px-6 lg:px-8">
  <!-- Language Switcher and Legal Links -->
  <div class="fixed top-4 right-4 z-50">
    <div class="flex items-center gap-4">
      <!-- Legal Links -->
      <div class="flex items-center gap-3 text-xs text-gray-500">
        <%= link_to t('common.footer.terms_of_service'), terms_of_service_path, class: "hover:text-rose-600 transition duration-200" %>
        <span class="text-gray-300">‚Ä¢</span>
        <%= link_to t('common.footer.privacy_policy'), privacy_policy_path, class: "hover:text-rose-600 transition duration-200" %>
      </div>
      <!-- Language Switcher -->
      <div class="flex gap-2">
        <% available_locales.each do |locale| %>
          <%= link_to locale_switch_url(locale[:code]), 
                class: "flex items-center gap-2 px-3 py-2 rounded-lg text-sm transition duration-200 bg-white/80 backdrop-blur-sm border shadow-sm #{'border-rose-200 text-rose-700 bg-rose-50/80' if I18n.locale.to_s == locale[:code]} #{'border-gray-200 text-gray-600 hover:bg-white hover:border-gray-300' unless I18n.locale.to_s == locale[:code]}" do %>
            <span><%= locale[:flag] %></span>
            <span class="hidden sm:inline"><%= locale[:name] %></span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mx-auto w-full max-w-sm sm:max-w-md">
    <div class="flex justify-center mb-8">
      <div class="flex items-center gap-3">
        <span class="text-4xl">üíù</span>
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-rose-500 to-purple-600 bg-clip-text text-transparent">Wishare</h1>
          <p class="text-sm text-gray-600"><%= t('app.tagline') %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="mx-auto w-full max-w-sm sm:max-w-md">
    <div class="bg-white/80 backdrop-blur-sm py-8 px-6 shadow-xl rounded-3xl sm:px-10 border border-rose-100">
      <h2 class="text-2xl font-bold text-gray-800 text-center mb-2"><%= t('auth.sign_up.title') %> ‚ú®</h2>
      <% if params[:email].present? %>
        <div class="bg-gradient-to-r from-rose-50 to-purple-50 border border-rose-200 rounded-xl p-4 mb-6">
          <p class="text-sm text-rose-800 text-center">
            üéÅ <strong><%= t('auth.sign_up.invited_title') %></strong> <%= t('auth.sign_up.invited_message') %>
          </p>
        </div>
      <% else %>
        <p class="text-gray-600 text-center mb-8"><%= t('auth.sign_up.subtitle') %></p>
      <% end %>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5", data: { controller: "terms-agreement" } }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :name, t('auth.sign_up.name'), class: "block text-sm font-semibold text-gray-800 mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <%= f.text_field :name, autofocus: true,
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 bg-rose-50/50 focus:bg-white", 
                  placeholder: t('auth.sign_up.name_placeholder') %>
          </div>
        </div>

        <div>
          <%= f.label :email, t('auth.sign_up.email'), class: "block text-sm font-semibold text-gray-800 mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <%= f.email_field :email, autocomplete: "email", 
                  value: params[:email],
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 bg-rose-50/50 focus:bg-white", 
                  placeholder: t('auth.sign_up.email_placeholder') %>
          </div>
        </div>

        <div>
          <%= f.label :date_of_birth, t('auth.sign_up.birthday'), class: "block text-sm font-semibold text-gray-800 mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <%= f.date_field :date_of_birth, 
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 bg-rose-50/50 focus:bg-white" %>
          </div>
          <p class="mt-2 text-xs text-gray-500">üìÖ <%= t('auth.sign_up.birthday_help') %></p>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-semibold text-gray-800 mb-2" do %>
            <%= t('auth.sign_up.password') %>
            <% if @minimum_password_length %>
              <span class="text-gray-500 font-normal"><%= t('auth.sign_up.password_hint', minimum: @minimum_password_length) %></span>
            <% end %>
          <% end %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <%= f.password_field :password, autocomplete: "new-password",
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 bg-rose-50/50 focus:bg-white",
                  placeholder: t('auth.sign_up.password_placeholder') %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, t('auth.sign_up.password_confirmation'), class: "block text-sm font-semibold text-gray-800 mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 bg-rose-50/50 focus:bg-white",
                  placeholder: t('auth.sign_up.password_confirmation_placeholder') %>
          </div>
        </div>

        <!-- Terms and Privacy Agreement -->
        <div class="pt-2">
          <label class="flex items-start gap-3 cursor-pointer group">
            <input type="checkbox" id="terms_agreement" class="mt-1 h-5 w-5 text-rose-600 focus:ring-rose-500 border-rose-300 rounded cursor-pointer" 
                   data-action="change->terms-agreement#toggle"
                   data-terms-agreement-target="checkbox">
            <span class="text-sm text-gray-600 select-none">
              <%= t('auth.sign_up.agreement_text_html', 
                    terms_link: link_to(t('common.footer.terms_of_service'), terms_of_service_path, target: '_blank', class: 'text-rose-600 hover:text-rose-700 underline'),
                    privacy_link: link_to(t('common.footer.privacy_policy'), privacy_policy_path, target: '_blank', class: 'text-rose-600 hover:text-rose-700 underline')) %>
            </span>
          </label>
        </div>

        <div class="pt-2">
          <%= f.submit t('auth.sign_up.sign_up_button'), 
                class: "w-full bg-gray-300 text-gray-500 py-4 px-6 rounded-xl cursor-not-allowed font-semibold text-lg shadow-lg opacity-50",
                disabled: true,
                data: { "terms-agreement-target": "submitButton" } %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
