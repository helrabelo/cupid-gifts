<div class="min-h-screen bg-gradient-to-br from-rose-50 via-amber-50 to-purple-50">
  <div class="max-w-4xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
    <div class="bg-white/90 backdrop-blur-sm rounded-3xl shadow-xl border border-rose-100 overflow-hidden">
      
      <!-- Header -->
      <div class="bg-gradient-to-r from-rose-500 to-purple-600 px-6 py-8 sm:px-8">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-white">Edit Profile</h1>
            <p class="mt-2 text-rose-100">Update your account information</p>
          </div>
          <%= link_to wishlists_path, class: "text-white hover:text-rose-100 transition" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          <% end %>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "p-6 sm:p-8 space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Avatar Section -->
        <div class="flex flex-col items-center pb-6 border-b border-gray-200">
          <div class="relative">
            <% if current_user.avatar_url.present? %>
              <img src="<%= current_user.avatar_url %>" alt="Avatar" class="w-24 h-24 rounded-full border-4 border-rose-200">
            <% else %>
              <div class="w-24 h-24 rounded-full bg-gradient-to-br from-rose-400 to-purple-500 flex items-center justify-center border-4 border-rose-200">
                <span class="text-3xl font-bold text-white"><%= current_user.display_name.first.upcase %></span>
              </div>
            <% end %>
            <div class="absolute bottom-0 right-0 bg-rose-500 rounded-full p-2 cursor-pointer hover:bg-rose-600 transition">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
          </div>
          <p class="mt-2 text-sm text-gray-500">
            <% if current_user.provider == 'google_oauth2' %>
              Profile picture from Google
            <% else %>
              Click to change avatar
            <% end %>
          </p>
        </div>

        <!-- Personal Information -->
        <div class="space-y-6">
          <h3 class="text-lg font-semibold text-gray-800 flex items-center gap-2">
            <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            Personal Information
          </h3>

          <div class="grid gap-6">
            <div class="grid gap-6 sm:grid-cols-2">
              <div>
                <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <%= f.text_field :name, autofocus: true, class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 transition", placeholder: "Your name" %>
                </div>
              </div>

              <div>
                <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <%= f.email_field :email, autocomplete: "email", class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 transition", placeholder: "Email address" %>
                </div>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p class="mt-2 text-sm text-amber-600">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                <% end %>
              </div>
            </div>

            <div class="grid gap-6 sm:grid-cols-2">
              <div>
                <%= f.label :date_of_birth, "Birthday", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="flex gap-2" data-controller="birthday">
                  <!-- Month -->
                  <div class="flex-1">
                    <select name="birth_month" id="birth_month" 
                      class="w-full px-3 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 transition" 
                      data-action="change->birthday#updateDate">
                      <option value="">Month</option>
                      <% 1.upto(12) do |month| %>
                        <option value="<%= month %>" <%= 'selected' if f.object.date_of_birth&.month == month %>>
                          <%= Date::MONTHNAMES[month] %>
                        </option>
                      <% end %>
                    </select>
                  </div>
                  
                  <!-- Day -->
                  <div class="w-20">
                    <select name="birth_day" id="birth_day" 
                      class="w-full px-2 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 transition" 
                      data-action="change->birthday#updateDate">
                      <option value="">Day</option>
                      <% 1.upto(31) do |day| %>
                        <option value="<%= day %>" <%= 'selected' if f.object.date_of_birth&.day == day %>><%= day %></option>
                      <% end %>
                    </select>
                  </div>
                  
                  <!-- Year -->
                  <div class="w-24">
                    <select name="birth_year" id="birth_year" 
                      class="w-full px-2 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 transition" 
                      data-action="change->birthday#updateDate">
                      <option value="">Year</option>
                      <% (Date.current.year - 100).upto(Date.current.year - 13) do |year| %>
                        <option value="<%= year %>" <%= 'selected' if f.object.date_of_birth&.year == year %>><%= year %></option>
                      <% end %>
                    </select>
                  </div>
                </div>
                
                <!-- Hidden field to store the actual date -->
                <%= f.hidden_field :date_of_birth, data: { "birthday-target": "hiddenField" } %>
                
                <p class="mt-1 text-xs text-gray-500">üìÖ Optional - helps friends remember your birthday</p>
              </div>

              <div class="max-w-xs">
                <%= f.label :preferred_locale, "Preferred Language", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
                    </svg>
                  </div>
                  <%= f.select :preferred_locale, options_for_select([
                    ['üá∫üá∏ English', 'en'],
                    ['üáßüá∑ Portugu√™s', 'pt-BR']
                  ], f.object.preferred_locale || I18n.default_locale.to_s), 
                  {}, 
                  { class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 transition" } %>
                </div>
                <p class="mt-1 text-xs text-gray-500">üåç Choose your preferred language</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Security Settings -->
        <div class="space-y-6 pt-6 border-t border-gray-200">
          <h3 class="text-lg font-semibold text-gray-800 flex items-center gap-2">
            <svg class="w-5 h-5 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <% if current_user.oauth_only? %>
              Set Password
            <% else %>
              Change Password
            <% end %>
          </h3>

          <% if current_user.oauth_only? %>
            <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
              <p class="text-sm text-blue-800">
                <strong>Google Account:</strong> You signed up with Google. Set a password if you'd like to also sign in with email.
              </p>
            </div>
          <% else %>
            <div class="bg-amber-50 border border-amber-200 rounded-xl p-4">
              <p class="text-sm text-amber-800">
                <strong>Note:</strong> Leave password fields blank if you don't want to change it
              </p>
            </div>
          <% end %>

          <div class="space-y-4">
            <div>
              <%= f.label :password, current_user.oauth_only? ? "Set password" : "New password", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 11v8m6-8v8M5 21h14"></path>
                  </svg>
                </div>
                <%= f.password_field :password, autocomplete: "new-password", 
                    class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 transition", 
                    placeholder: current_user.oauth_only? ? "Set a password" : "New password (optional)" %>
              </div>
              <% if @minimum_password_length %>
                <p class="mt-1 text-sm text-gray-500"><%= @minimum_password_length %> characters minimum</p>
              <% end %>
            </div>

            <div>
              <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                    class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 transition", 
                    placeholder: current_user.oauth_only? ? "Confirm password" : "Confirm new password" %>
              </div>
            </div>

            <% unless current_user.oauth_only? %>
              <div>
                <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                  </div>
                  <%= f.password_field :current_password, autocomplete: "current-password", 
                      class: "w-full pl-10 pr-3 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-500 focus:border-rose-500 transition", 
                      placeholder: "Current password (required to change password)" %>
                </div>
                <p class="mt-1 text-sm text-gray-500">We need your current password to confirm password changes</p>
              </div>
            <% end %>
          </div>

          <% if current_user.provider.present? %>
            <div class="bg-gray-50 border border-gray-200 rounded-xl p-4">
              <h4 class="text-sm font-semibold text-gray-700 mb-2">Connected Accounts</h4>
              <div class="flex items-center gap-3">
                <% if current_user.provider == 'google_oauth2' %>
                  <div class="flex items-center gap-2">
                    <svg class="w-5 h-5" viewBox="0 0 24 24">
                      <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                      <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                      <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                      <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    <span class="text-sm text-gray-600">Google account connected</span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-6">
          <%= f.submit "Save Changes", class: "flex-1 bg-gradient-to-r from-rose-500 to-rose-600 text-white py-3 px-6 rounded-xl hover:from-rose-600 hover:to-rose-700 focus:outline-none focus:ring-2 focus:ring-rose-500 focus:ring-offset-2 transition font-semibold cursor-pointer" %>
          <%= link_to "Cancel", wishlists_path, class: "flex-1 bg-gray-100 text-gray-700 py-3 px-6 rounded-xl hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition font-semibold text-center" %>
        </div>
      <% end %>

      <!-- Danger Zone -->
      <div class="border-t border-gray-200 bg-red-50/50 px-6 py-6 sm:px-8">
        <h3 class="text-lg font-semibold text-red-800 mb-3">Danger Zone</h3>
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-700">Delete your account</p>
            <p class="text-xs text-gray-500 mt-1">This action cannot be undone</p>
          </div>
          <%= button_to "Delete Account", registration_path(resource_name), 
              data: { turbo_confirm: "Are you absolutely sure? This will permanently delete your account and all your wishlists." }, 
              method: :delete,
              class: "bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition text-sm font-medium" %>
        </div>
      </div>
    </div>
  </div>
</div>