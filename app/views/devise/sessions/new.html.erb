<div class="min-h-screen bg-gray-50 flex flex-col justify-center px-4 py-8 sm:px-6 lg:px-8">
  <div class="mx-auto w-full max-w-sm sm:max-w-md">
    <div class="flex justify-center mb-8">
      <div class="flex items-center gap-3">
        <svg class="w-10 h-10 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15.546c-.523 0-1.046-.151-1.5-.454a2.704 2.704 0 01-1.042-.918 2.704 2.704 0 01-.454-1.5V8.546c0-.523.151-1.046.454-1.5.303-.454.631-.813 1.042-.918.453-.303.977-.454 1.5-.454s1.046.151 1.5.454c.411.105.739.464 1.042.918.303.454.454.977.454 1.5v4.128c0 .523-.151 1.046-.454 1.5a2.704 2.704 0 01-1.042.918c-.454.303-.977.454-1.5.454zM12 21a9 9 0 100-18 9 9 0 000 18z"></path>
        </svg>
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-800">WishShare</h1>
          <p class="text-sm text-gray-600">Share wishlists with your partner</p>
        </div>
      </div>
    </div>
  </div>

  <div class="mx-auto w-full max-w-sm sm:max-w-md">
    <div class="bg-white py-8 px-6 shadow-lg rounded-2xl sm:rounded-xl sm:px-10 border border-gray-100">
      <h2 class="text-2xl font-bold text-gray-800 text-center mb-8">Welcome back</h2>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <div>
          <%= f.label :email, "Email address", class: "block text-sm font-semibold text-gray-800 mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition duration-200 bg-gray-50 focus:bg-white", 
                  placeholder: "Enter your email" %>
          </div>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-semibold text-gray-800 mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <%= f.password_field :password, autocomplete: "current-password",
                  class: "w-full pl-12 pr-4 py-4 text-base border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition duration-200 bg-gray-50 focus:bg-white",
                  placeholder: "Enter your password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center py-2">
            <%= f.check_box :remember_me, class: "h-5 w-5 text-teal-600 focus:ring-teal-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, "Remember me", class: "ml-3 block text-sm text-gray-700 select-none cursor-pointer" %>
          </div>
        <% end %>

        <div class="pt-2">
          <%= f.submit "Sign in", class: "w-full bg-teal-600 text-white py-4 px-6 rounded-xl hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 transition duration-200 cursor-pointer font-semibold text-lg touch-manipulation" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
