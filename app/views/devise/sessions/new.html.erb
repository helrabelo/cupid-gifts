<% content_for :title, t('auth.sign_in.title') %>
<% content_for :description, "Sign in to your Wishare account to create and manage wishlists, connect with friends and family, and make gifting more meaningful." %>

<div class="min-h-screen bg-gradient-to-br from-rose-50 via-amber-50 to-purple-50 flex flex-col justify-center px-4 py-8 sm:px-6 lg:px-8">
  <!-- Language Switcher -->
  <div class="fixed top-4 right-4 z-50">
    <div class="flex gap-2">
      <% available_locales.each do |locale| %>
        <%= link_to locale_switch_url(locale[:code]), 
              class: "flex items-center gap-2 px-3 py-2 rounded-lg text-sm transition duration-200 bg-white/80 backdrop-blur-sm border shadow-sm #{'border-rose-200 text-rose-700 bg-rose-50/80' if I18n.locale.to_s == locale[:code]} #{'border-gray-200 text-gray-600 hover:bg-white hover:border-gray-300' unless I18n.locale.to_s == locale[:code]}" do %>
          <span><%= locale[:flag] %></span>
          <span class="hidden sm:inline"><%= locale[:name] %></span>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="mx-auto w-full max-w-sm sm:max-w-md">
    <div class="flex justify-center mb-8">
      <%= link_to root_path, class: "flex items-center gap-3 hover:opacity-80 transition duration-200" do %>
        <span class="text-4xl">üíù</span>
        <div>
          <h1 class="heading-card bg-gradient-to-r from-rose-500 to-purple-600 bg-clip-text text-transparent">Wishare</h1>
          <p class="text-body-sm text-gray-600"><%= t('app.tagline') %></p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mx-auto w-full max-w-sm sm:max-w-md">
    <div class="bg-white/80 backdrop-blur-sm py-8 px-6 shadow-xl rounded-3xl sm:px-10 border border-rose-100">
      <h2 class="heading-section text-gray-800 text-center mb-8"><%= t('auth.sign_in.title') %> ‚ú®</h2>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
                   html: { 
                     class: "space-y-5",
                     "data-controller" => "analytics",
                     "data-action" => "submit->analytics#trackUserLogin"
                   }) do |f| %>
        <div>
          <%= f.label :email, t('auth.sign_in.email'), class: "form-label block mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                  class: "form-input w-full pl-12 pr-4 py-4 border-2 border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 bg-rose-50/50 focus:bg-white", 
                  placeholder: t('auth.sign_in.email_placeholder') %>
          </div>
        </div>

        <div>
          <%= f.label :password, t('auth.sign_in.password'), class: "form-label block mb-3" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <%= f.password_field :password, autocomplete: "current-password",
                  class: "form-input w-full pl-12 pr-4 py-4 border-2 border-rose-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-rose-400 transition duration-200 bg-rose-50/50 focus:bg-white",
                  placeholder: t('auth.sign_in.password_placeholder') %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center py-2">
            <%= f.check_box :remember_me, class: "h-5 w-5 text-rose-600 focus:ring-rose-500 border-rose-300 rounded" %>
            <%= f.label :remember_me, t('auth.sign_in.remember_me'), class: "ml-3 block text-body-sm text-gray-700 select-none cursor-pointer" %>
          </div>
        <% end %>

        <div class="pt-2">
          <%= f.submit t('auth.sign_in.sign_in_button'), class: "btn-primary w-full bg-gradient-to-r from-rose-500 to-rose-600 text-white py-4 px-6 rounded-xl hover:from-rose-600 hover:to-rose-700 focus:outline-none focus:ring-2 focus:ring-rose-500 focus:ring-offset-2 transition duration-200 cursor-pointer text-lg touch-manipulation shadow-lg" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      
      <!-- Legal Links -->
      <div class="mt-6 pt-6 border-t border-rose-100 text-center">
        <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-4 text-body-xs text-gray-500">
          <%= link_to t('common.footer.terms_of_service'), terms_of_service_path, class: "hover:text-rose-600 transition duration-200 underline" %>
          <span class="hidden sm:inline text-gray-300">‚Ä¢</span>
          <%= link_to t('common.footer.privacy_policy'), privacy_policy_path, class: "hover:text-rose-600 transition duration-200 underline" %>
        </div>
      </div>
    </div>
  </div>
</div>
