<% content_for :title, @wishlist.name %>
<% content_for :description, @wishlist.description.present? ? "#{@wishlist.description} - #{pluralize(@wishlist.wishlist_items.count, 'item')} in this wishlist." : "View #{@wishlist.name} wishlist with #{pluralize(@wishlist.wishlist_items.count, 'gift idea')} from #{@wishlist.user.name || @wishlist.user.email}." %>
<% content_for :structured_data, structured_data_wishlist(@wishlist) %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to wishlists_path, class: "inline-flex items-center text-gray-600 hover:text-rose-600 transition duration-200" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
<%= @wishlist.user == current_user ? t('wishlists.show.back_to_your_wishlists') : t('wishlists.show.back_to_their_wishlists') %>
    <% end %>
  </div>

  <div class="bg-white/90 backdrop-blur-sm rounded-3xl border border-rose-100 mb-8 shadow-lg">
    <div class="p-4 sm:p-8">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-4">
        <div class="flex items-start gap-4">
          <div class="bg-gradient-to-r from-rose-100 to-amber-100 rounded-full w-12 h-12 flex items-center justify-center flex-shrink-0">
            <% if @wishlist.user == current_user %>
              <svg class="w-6 h-6 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            <% else %>
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            <% end %>
          </div>
          <div class="min-w-0">
            <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-800 mb-2 break-words"><%= @wishlist.name %></h1>
            <% if @wishlist.description.present? %>
              <p class="text-gray-600 mb-4 text-sm sm:text-base"><%= @wishlist.description %></p>
            <% end %>
            <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 text-sm text-gray-500">
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span class="truncate"><%= t('wishlists.show.created_by', date: l(@wishlist.created_at, format: :short), user: @wishlist.user.name || @wishlist.user.email) %></span>
              </span>
            </div>
          </div>
        </div>
        
        <% if @wishlist.user == current_user %>
          <div class="flex gap-2 flex-shrink-0 items-center">
            <%= link_to t('wishlists.show.add_item'), new_wishlist_wishlist_item_path(@wishlist), class: "bg-gradient-to-r from-rose-500 to-rose-600 text-white px-3 sm:px-4 py-2 rounded-xl hover:from-rose-600 hover:to-rose-700 transition duration-200 font-medium text-sm sm:text-base shadow-lg" %>
            
            <!-- Three dots menu -->
            <div class="relative" data-controller="dropdown">
              <button data-action="click->dropdown#toggle" class="text-gray-400 hover:text-gray-600 hover:bg-gray-100 p-2 rounded-lg transition duration-200 cursor-pointer">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                </svg>
              </button>
              
              <!-- Dropdown Menu -->
              <div data-dropdown-target="menu" class="absolute right-0 mt-1 w-48 bg-white rounded-xl shadow-lg border border-rose-100 py-2 hidden z-50">
                <%= link_to edit_wishlist_path(@wishlist), class: "block px-4 py-2 text-sm text-gray-600 hover:bg-gray-50 transition duration-200" do %>
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    <%= t('wishlists.show.edit_wishlist') %>
                  </div>
                <% end %>
                <%= link_to @wishlist, method: :delete, 
                    data: { 
                      confirm: t('wishlists.show.delete_confirm', name: @wishlist.name),
                      controller: "analytics",
                      action: "click->analytics#trackWishlistDeleted",
                      "analytics-wishlist-id-param": @wishlist.id,
                      "analytics-wishlist-name-param": @wishlist.name,
                      "analytics-items-count-param": @wishlist.wishlist_items.count
                    }, 
                    class: "block px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition duration-200" do %>
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    <%= t('wishlists.show.delete_wishlist') %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mb-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-1"><%= t('wishlists.show.gift_ideas') %></h2>
    <p class="text-gray-600"><%= @wishlist.user == current_user ? t('wishlists.show.items_you_love') : t('wishlists.show.items_they_love') %></p>
  </div>

  <% if @wishlist_items.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
      <% @wishlist_items.each do |item| %>
        <div class="bg-white rounded-xl border border-gray-100 hover:border-pink-200 transition duration-200 overflow-hidden <%= 'opacity-75' if item.purchased? %>">
          <% if item.image_url.present? %>
            <div class="relative">
              <img src="<%= item.image_url %>" alt="<%= item.name %>" class="w-full h-48 object-cover">
              <% if item.purchased? %>
                <div class="absolute inset-0 bg-black bg-opacity-20 flex items-center justify-center">
                  <div class="bg-green-600 text-white px-3 py-1 rounded-full text-sm font-medium flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <%= t('wishlists.show.purchased') %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="w-full h-48 bg-pink-50 flex items-center justify-center relative">
              <svg class="h-12 w-12 text-pink-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <% if item.purchased? %>
                <div class="absolute inset-0 bg-black bg-opacity-20 flex items-center justify-center">
                  <div class="bg-green-600 text-white px-3 py-1 rounded-full text-sm font-medium flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <%= t('wishlists.show.purchased') %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
          
          <div class="p-4 sm:p-6">
            <div class="flex justify-between items-start mb-3">
              <h3 class="text-base sm:text-lg font-semibold text-gray-800 flex-1 pr-2 break-words"><%= item.name %></h3>
              <% if @wishlist.user == current_user %>
                <div class="flex gap-1 flex-shrink-0">
                  <%= link_to edit_wishlist_wishlist_item_path(@wishlist, item), class: "text-gray-400 hover:text-pink-500 transition duration-200 p-1", title: t('wishlists.show.edit_item') do %>
                    <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>
                  <%= button_to wishlist_wishlist_item_path(@wishlist, item), {
                      method: :delete, 
                      data: { 
                        confirm: t('wishlists.show.delete_item_confirm', name: item.name),
                        controller: "analytics",
                        action: "click->analytics#trackItemRemoved",
                        "analytics-item-id-param": item.id,
                        "analytics-item-name-param": item.name
                      },
                      class: "text-gray-400 hover:text-red-500 transition duration-200 border-none bg-transparent p-1", 
                      title: t('wishlists.show.delete_item')
                    } do %>
                    <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <% if item.description.present? %>
              <p class="text-gray-600 text-sm mb-3"><%= truncate(item.description, length: 80) %></p>
            <% end %>
            
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 sm:gap-4 mb-4">
              <% if item.price.present? %>
                <span class="text-lg sm:text-xl font-bold text-gray-800"><%= item.formatted_price %></span>
              <% else %>
                <span class="text-sm text-gray-500"><%= t('wishlists.show.price_not_set') %></span>
              <% end %>
              
              <span class="text-xs px-2 sm:px-3 py-1 rounded-full font-medium self-start sm:self-auto <%= item.priority == 'high' ? 'bg-red-100 text-red-700' : item.priority == 'medium' ? 'bg-pink-100 text-pink-700' : 'bg-gray-100 text-gray-600' %>">
                <%= t("items.form.priority_display.#{item.priority}") %> <%= t('wishlists.show.priority') %>
              </span>
            </div>
            
            <% unless item.purchased? %>
              <div class="flex flex-col sm:flex-row gap-2">
                <% if item.safe_url.present? %>
                  <%= link_to item.safe_url, 
                      target: "_blank", 
                      rel: "noopener noreferrer",
                      data: {
                        controller: "analytics",
                        action: "click->analytics#trackExternalLinkClick",
                        "analytics-item-name-param": item.name
                      },
                      class: "flex-1 text-center bg-gray-100 text-gray-700 px-3 py-2 rounded-lg hover:bg-gray-200 transition duration-200 text-sm font-medium flex items-center justify-center gap-2" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                    <%= t('wishlists.show.view_item') %>
                  <% end %>
                <% end %>
                
                <% if @wishlist.user != current_user %>
                  <%= button_to purchase_wishlist_wishlist_item_path(@wishlist, item), {method: :patch, class: "flex-1 bg-pink-500 text-white px-3 py-2 rounded-lg hover:bg-pink-600 transition duration-200 text-sm font-medium cursor-pointer"} do %>
                    <span class="hidden xs:inline"><%= t('wishlists.show.mark_purchased') %></span>
                    <span class="xs:hidden"><%= t('wishlists.show.purchase') %></span>
                  <% end %>
                <% end %>
              </div>
            <% else %>
              <!-- Purchased item actions -->
              <% if item.purchased_by %>
                <div class="bg-green-50 border border-green-200 rounded-lg p-3 text-sm">
                  <div class="flex items-center gap-2 mb-2">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-green-700 font-medium"><%= t('wishlists.show.purchased_by', buyer: item.purchased_by.name || item.purchased_by.email) %></span>
                  </div>
                  <% if item.purchased_by == current_user %>
                    <%= button_to unpurchase_wishlist_wishlist_item_path(@wishlist, item), {method: :patch, 
                        class: "bg-gray-100 text-gray-700 px-3 py-1 rounded text-xs hover:bg-gray-200 transition duration-200"} do %>
                      <%= t('wishlists.show.mark_as_available') %>
                    <% end %>
                  <% elsif item.safe_url.present? %>
                    <%= link_to item.safe_url, 
                        target: "_blank", 
                        rel: "noopener noreferrer",
                        data: {
                          controller: "analytics",
                          action: "click->analytics#trackExternalLinkClick",
                          "analytics-item-name-param": item.name
                        },
                        class: "text-green-600 hover:text-green-700 text-xs flex items-center gap-1" do %>
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                      <%= t('wishlists.show.view_item') %>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-pink-50 rounded-xl p-12 text-center">
      <div class="bg-white rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
        <svg class="w-8 h-8 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= t('wishlists.show.no_items_yet') %></h3>
      <% if @wishlist.user == current_user %>
        <p class="text-gray-600 mb-6"><%= t('wishlists.show.no_items_description_owner') %></p>
        <%= link_to t('wishlists.show.add_first_item'), new_wishlist_wishlist_item_path(@wishlist), class: "bg-pink-500 text-white px-6 py-3 rounded-lg hover:bg-pink-600 transition duration-200 font-medium" %>
      <% else %>
        <p class="text-gray-600"><%= t('wishlists.show.no_items_description_visitor') %></p>
      <% end %>
    </div>
  <% end %>
</div>