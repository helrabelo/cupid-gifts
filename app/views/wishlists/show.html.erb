<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to wishlists_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition duration-200" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to <%= @wishlist.user == current_user ? "Your" : "Partner's" %> Wishlists
    <% end %>
  </div>

  <div class="bg-white rounded-xl border border-gray-100 mb-8">
    <div class="p-4 sm:p-8">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-4">
        <div class="flex items-start gap-4">
          <div class="bg-gray-100 rounded-full w-12 h-12 flex items-center justify-center flex-shrink-0">
            <% if @wishlist.user == current_user %>
              <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            <% else %>
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            <% end %>
          </div>
          <div class="min-w-0">
            <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-800 mb-2 break-words"><%= @wishlist.name %></h1>
            <% if @wishlist.description.present? %>
              <p class="text-gray-600 mb-4 text-sm sm:text-base"><%= @wishlist.description %></p>
            <% end %>
            <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 text-sm text-gray-500">
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span class="truncate">Created <%= @wishlist.created_at.strftime("%m/%d/%Y") %> by <%= @wishlist.user.name || @wishlist.user.email %></span>
              </span>
            </div>
          </div>
        </div>
        
        <% if @wishlist.user == current_user %>
          <div class="flex gap-2 flex-shrink-0">
            <%= link_to "Add Item", new_wishlist_wishlist_item_path(@wishlist), class: "bg-teal-600 text-white px-3 sm:px-4 py-2 rounded-lg hover:bg-teal-700 transition duration-200 font-medium text-sm sm:text-base" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mb-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-1">Gift Ideas</h2>
    <p class="text-gray-600">Items <%= @wishlist.user == current_user ? "you" : "your partner" %> would love to receive</p>
  </div>

  <% if @wishlist_items.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
      <% @wishlist_items.each do |item| %>
        <div class="bg-white rounded-xl border border-gray-100 hover:border-teal-200 transition duration-200 overflow-hidden <%= 'opacity-75' if item.purchased? %>">
          <% if item.image_url.present? %>
            <div class="relative">
              <img src="<%= item.image_url %>" alt="<%= item.name %>" class="w-full h-48 object-cover">
              <% if item.purchased? %>
                <div class="absolute inset-0 bg-black bg-opacity-20 flex items-center justify-center">
                  <div class="bg-green-600 text-white px-3 py-1 rounded-full text-sm font-medium flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Purchased
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="w-full h-48 bg-teal-50 flex items-center justify-center relative">
              <svg class="h-12 w-12 text-teal-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <% if item.purchased? %>
                <div class="absolute inset-0 bg-black bg-opacity-20 flex items-center justify-center">
                  <div class="bg-green-600 text-white px-3 py-1 rounded-full text-sm font-medium flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Purchased
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
          
          <div class="p-4 sm:p-6">
            <div class="flex justify-between items-start mb-3">
              <h3 class="text-base sm:text-lg font-semibold text-gray-800 flex-1 pr-2 break-words"><%= item.name %></h3>
              <% if @wishlist.user == current_user %>
                <div class="flex gap-1 flex-shrink-0">
                  <%= link_to edit_wishlist_wishlist_item_path(@wishlist, item), class: "text-gray-400 hover:text-teal-600 transition duration-200 p-1", title: "Edit item" do %>
                    <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>
                  <%= button_to wishlist_wishlist_item_path(@wishlist, item), method: :delete, 
                      data: { confirm: "Are you sure you want to delete '#{item.name}' from this wishlist?" },
                      class: "text-gray-400 hover:text-red-500 transition duration-200 border-none bg-transparent p-1", 
                      title: "Delete item" do %>
                    <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <% if item.description.present? %>
              <p class="text-gray-600 text-sm mb-3"><%= truncate(item.description, length: 80) %></p>
            <% end %>
            
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 sm:gap-4 mb-4">
              <% if item.price.present? %>
                <span class="text-lg sm:text-xl font-bold text-gray-800">$<%= item.price %></span>
              <% else %>
                <span class="text-sm text-gray-500">Price not set</span>
              <% end %>
              
              <span class="text-xs px-2 sm:px-3 py-1 rounded-full font-medium self-start sm:self-auto <%= item.priority == 'high' ? 'bg-orange-100 text-orange-700' : item.priority == 'medium' ? 'bg-purple-100 text-purple-700' : 'bg-gray-100 text-gray-600' %>">
                <%= item.priority %> priority
              </span>
            </div>
            
            <% unless item.purchased? %>
              <div class="flex flex-col sm:flex-row gap-2">
                <% if item.url.present? %>
                  <%= link_to item.url, target: "_blank", class: "flex-1 text-center bg-gray-100 text-gray-700 px-3 py-2 rounded-lg hover:bg-gray-200 transition duration-200 text-sm font-medium flex items-center justify-center gap-2" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                    View Item
                  <% end %>
                <% end %>
                
                <% if @wishlist.user != current_user %>
                  <%= button_to purchase_wishlist_wishlist_item_path(@wishlist, item), method: :patch, class: "flex-1 bg-teal-600 text-white px-3 py-2 rounded-lg hover:bg-teal-700 transition duration-200 text-sm font-medium cursor-pointer" do %>
                    <span class="hidden xs:inline">Mark Purchased</span>
                    <span class="xs:hidden">Purchase</span>
                  <% end %>
                <% end %>
              </div>
            <% else %>
              <!-- Purchased item actions -->
              <% if item.purchased_by %>
                <div class="bg-green-50 border border-green-200 rounded-lg p-3 text-sm">
                  <div class="flex items-center gap-2 mb-2">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-green-700 font-medium">Purchased by <%= item.purchased_by.name || item.purchased_by.email %></span>
                  </div>
                  <% if item.purchased_by == current_user %>
                    <%= button_to unpurchase_wishlist_wishlist_item_path(@wishlist, item), method: :patch, 
                        class: "bg-gray-100 text-gray-700 px-3 py-1 rounded text-xs hover:bg-gray-200 transition duration-200" do %>
                      Mark as Available
                    <% end %>
                  <% elsif item.url.present? %>
                    <%= link_to item.url, target: "_blank", class: "text-green-600 hover:text-green-700 text-xs flex items-center gap-1" do %>
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                      View Item
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-teal-50 rounded-xl p-12 text-center">
      <div class="bg-white rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
        <svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-gray-800 mb-2">No Items Yet</h3>
      <% if @wishlist.user == current_user %>
        <p class="text-gray-600 mb-6">Start adding items you'd love to receive</p>
        <%= link_to "Add Your First Item", new_wishlist_wishlist_item_path(@wishlist), class: "bg-teal-600 text-white px-6 py-3 rounded-lg hover:bg-teal-700 transition duration-200 font-medium" %>
      <% else %>
        <p class="text-gray-600">Your partner hasn't added any items yet. Check back soon!</p>
      <% end %>
    </div>
  <% end %>
</div>