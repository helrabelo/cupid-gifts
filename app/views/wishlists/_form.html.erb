<%= form_with(model: wishlist, local: true) do |form| %>
  <% if wishlist.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-xl mb-6">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h3 class="font-semibold mb-2"><%= pluralize(wishlist.errors.count, "error") %> prohibited this wishlist from being saved:</h3>
          <ul class="list-disc list-inside space-y-1">
            <% wishlist.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :name, class: "block text-sm font-semibold text-gray-800 mb-2" %>
    <%= form.text_field :name, class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition duration-200", placeholder: "Birthday Wishlist 2024" %>
  </div>

  <div class="mb-6">
    <%= form.label :description, class: "block text-sm font-semibold text-gray-800 mb-2" %>
    <%= form.text_area :description, rows: 4, class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition duration-200 resize-none", placeholder: "Things I'd love for my upcoming birthday..." %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <div>
      <%= form.label :visibility, class: "block text-sm font-semibold text-gray-800 mb-2" %>
      <%= form.select :visibility, options_for_select([['Partner Only', 'partner_only'], ['Private', 'private_list']], wishlist.visibility), {}, class: "w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition duration-200 bg-white" %>
      <p class="mt-2 text-sm text-gray-500">Choose who can see this wishlist</p>
    </div>

    <div class="flex items-center">
      <div class="bg-teal-50 p-4 rounded-xl w-full">
        <div class="flex items-start gap-3">
          <%= form.check_box :is_default, class: "h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded mt-0.5" %>
          <div>
            <%= form.label :is_default, "Set as default wishlist", class: "text-sm font-medium text-gray-700" %>
            <p class="text-xs text-gray-500 mt-1">This will be shown first to your partner</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="flex gap-3 pt-4">
    <%= form.submit class: "bg-teal-600 text-white px-8 py-3 rounded-xl hover:bg-teal-700 transition duration-200 cursor-pointer font-medium" %>
    <%= link_to "Cancel", wishlists_path, class: "bg-gray-100 text-gray-700 px-8 py-3 rounded-xl hover:bg-gray-200 transition duration-200 font-medium" %>
  </div>
<% end %>